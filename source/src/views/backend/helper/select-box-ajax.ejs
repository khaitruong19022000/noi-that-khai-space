
<% 
    selectBoxAjaxHelper = (name, categoryItems, optionSelected = '', id, linkPrefix, path = 'change-category') => {
        let xhtml = '';
        let link = `${linkPrefix}${path}/` + id + "/";
        categoryItems.forEach((item) => {
            let selected = (item.id == optionSelected) ? `selected="selected"` : '';
            xhtml += `<option id="inputCategory" value="${item.id}" ${selected}>${item.name}</option>`
        })

        return `<select onchange="changeCategory('${link}', this)" id="${name}" name="${name}" class="custom-select custom-select-sm">${xhtml}</select>`;
    }    
%>

