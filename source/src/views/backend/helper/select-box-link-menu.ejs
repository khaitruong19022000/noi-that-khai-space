
<% 
    selectBoxLinkMenuHelper = (name, categoryItems, optionSelected = '') => {
        let xhtml = '';
        categoryItems.forEach((item) => {
            let selected = (item.id == optionSelected) ? `selected="selected"` : '';
            xhtml += `<option value="${item.link}" id="${item.id}" ${selected}>${item.name}</option>`
        })

        return `<select id="${name}" name="${name}" class="custom-select custom-select-sm">${xhtml}</select>`;
    }    
%>

