
<% 
    dashboardHelper = (className, count, collect, classIcon, link='#') => {  
        let xhtml = '';
        xhtml = `<div class="col-lg-3 col-6">
                    <div class="small-box ${className}">
                        <div class="inner">
                            <h3>${count}</h3>
                            <p>${collect}</p>
                        </div>
                        <div class="icon">
                            <i class="ion ${classIcon}"></i>
                        </div>
                        <a href="${link}" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>`
        return xhtml;
    }    
%>
