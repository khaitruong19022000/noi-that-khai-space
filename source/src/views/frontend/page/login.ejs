
<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">

            <div class="tabs mx-auto mb-0 clearfix" id="tab-login-register" style="max-width: 500px;">

                <div class="tab-container">

                    <div class="tab-content" id="tab-login">
                        <div class="card mb-0">
                            <div class="card-body" style="padding: 40px;">
                                <% include ./../../flash.ejs %>
                                <form id="login-form" name="login-form" class="mb-0" action="admin/authen/login" method="post">

                                    <h3>Đăng Nhập</h3>

                                    <div class="row">
                                        <div class="col-12 form-group">
                                            <label for="username">Username:</label>
                                            <input type="text" id="username" name="username" value="" class="form-control" placeholder="Tên đăng nhập"/>
                                        </div>

                                        <div class="col-12 form-group">
